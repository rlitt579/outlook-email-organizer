<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
    xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
    xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverides/1.0"
    xsi:type="MailApp">

    <!-- Begin Basic Settings -->
    <Id>63c8b297-873b-41ce-8fdd-48edc3e114e9</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>Email Organizer Solutions</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    
    <!-- Display Name -->
    <DisplayName DefaultValue="Email Organizer" />
    
    <!-- Description -->
    <Description DefaultValue="Organize your Outlook mailbox by sender frequency and manage emails efficiently with smart deletion options." />
    
    <!-- Icon URLs - Replace with your actual hosted icon URLs -->
    <IconUrl DefaultValue="https://github.com/rlitt579/outlook-email-organizer/blob/main/icon-32.png" />
    <HighResolutionIconUrl DefaultValue="https://github.com/rlitt579/outlook-email-organizer/blob/main/icon-80.png" />
    
    <!-- Support URL -->
    <SupportUrl DefaultValue="https://github.com/rlitt579/outlook-email-organizer/blob/main/deployment-guide.md" />
    
    <!-- App Domains - Add your hosting domain -->
    <AppDomains>
        <AppDomain>https://rlitt579.github.io/outlook-email-organizer</AppDomain>
    </AppDomains>
    <!-- End Basic Settings -->

    <!-- Begin Common Settings -->
    <Hosts>
        <Host Name="Mailbox" />
    </Hosts>
    
    <Requirements>
        <Sets>
            <Set Name="Mailbox" MinVersion="1.1" />
        </Sets>
    </Requirements>
    
    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
                <SourceLocation DefaultValue="https://github.com/rlitt579/outlook-email-organizer/blob/main/email-organizer.html" />
                <RequestedHeight>450</RequestedHeight>
            </DesktopSettings>
        </Form>
    </FormSettings>

    <Permissions>ReadWriteMailbox</Permissions>
    
    <Rule xsi:type="RuleCollection" Mode="Or">
        <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    </Rule>
    <!-- End Common Settings -->

    <!-- Begin Version Overrides -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
        <Requirements>
            <bt:Sets DefaultMinVersion="1.3">
                <bt:Set Name="Mailbox" />
            </bt:Sets>
        </Requirements>
        
        <Hosts>
            <Host xsi:type="MailHost">
                <DesktopFormFactor>
                    <!-- Function File -->
                    <FunctionFile resid="Commands.Url" />
                    
                    <!-- Module Extension Point - Always visible in ribbon -->
                    <ExtensionPoint xsi:type="Module">
                        <SourceLocation resid="Taskpane.Url" />
                    </ExtensionPoint>
                    
                    <!-- Task Pane - Message Read -->
                    <ExtensionPoint xsi:type="MessageReadCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgReadGroup">
                                <Label resid="GroupLabel" />
                                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                                    <Label resid="TaskpaneButton.Label" />
                                    <Supertip>
                                        <Title resid="TaskpaneButton.Label" />
                                        <Description resid="TaskpaneButton.Tooltip" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16" />
                                        <bt:Image size="32" resid="Icon.32x32" />
                                        <bt:Image size="80" resid="Icon.80x80" />
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <SourceLocation resid="Taskpane.Url" />
                                    </Action>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                    
                    <!-- Message Compose -->
                    <ExtensionPoint xsi:type="MessageComposeCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="msgComposeGroup">
                                <Label resid="GroupLabel" />
                                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                                    <Label resid="TaskpaneButton.Label" />
                                    <Supertip>
                                        <Title resid="TaskpaneButton.Label" />
                                        <Description resid="TaskpaneButton.Tooltip" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16" />
                                        <bt:Image size="32" resid="Icon.32x32" />
                                        <bt:Image size="80" resid="Icon.80x80" />
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <SourceLocation resid="Taskpane.Url" />
                                    </Action>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                    
                    <!-- Mailbox Command Surface - Always available -->
                    <ExtensionPoint xsi:type="MailboxCommandSurface">
                        <OfficeTab id="TabDefault">
                            <Group id="mailboxGroup">
                                <Label resid="GroupLabel" />
                                <Control xsi:type="Button" id="mailboxOpenPaneButton">
                                    <Label resid="TaskpaneButton.Label" />
                                    <Supertip>
                                        <Title resid="TaskpaneButton.Label" />
                                        <Description resid="TaskpaneButton.Tooltip" />
                                    </Supertip>
                                    <Icon>
                                        <bt:Image size="16" resid="Icon.16x16" />
                                        <bt:Image size="32" resid="Icon.32x32" />
                                        <bt:Image size="80" resid="Icon.80x80" />
                                    </Icon>
                                    <Action xsi:type="ShowTaskpane">
                                        <SourceLocation resid="Taskpane.Url" />
                                    </Action>
                                </Control>
                            </Group>
                        </OfficeTab>
                    </ExtensionPoint>
                </DesktopFormFactor>
            </Host>
        </Hosts>

        <Resources>
            <bt:Images>
                <bt:Image id="Icon.16x16" DefaultValue="https://your-domain.com/icons/icon-16.png" />
                <bt:Image id="Icon.32x32" DefaultValue="https://your-domain.com/icons/icon-32.png" />
                <bt:Image id="Icon.80x80" DefaultValue="https://your-domain.com/icons/icon-80.png" />
            </bt:Images>
            <bt:Urls>
                <bt:Url id="Commands.Url" DefaultValue="https://your-domain.com/commands.html" />
                <bt:Url id="Taskpane.Url" DefaultValue="https://your-domain.com/email-organizer.html" />
            </bt:Urls>
            <bt:ShortStrings>
                <bt:String id="GroupLabel" DefaultValue="Email Organizer" />
                <bt:String id="TaskpaneButton.Label" DefaultValue="Email Organizer" />
            </bt:ShortStrings>
            <bt:LongStrings>
                <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Organize emails by sender frequency and manage with smart deletion options" />
            </bt:LongStrings>
        </Resources>
    </VersionOverrides>
    <!-- End Version Overrides -->

</OfficeApp>
